<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brg_signin">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CERTAINLY HERE IAM"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:drawableTop="@drawable/ic_list"
        android:drawableTint="@color/purple"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:padding="20dp"
        android:background="@drawable/border_radius_top">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't worry"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/subtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please fill in the information below to retrieve your password"
            android:layout_marginBottom="40dp"
            android:textColor="@color/gray"
            android:layout_below="@id/titleTextView"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:drawableLeft="@drawable/ic_emaill"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edittext"
            android:layout_below="@id/subtitleTextView"
            />

        <EditText
            android:id="@+id/newPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:drawableLeft="@drawable/ic_security"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edittext"
            android:layout_below="@+id/emailEditText"
            />

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:drawableLeft="@drawable/ic_security"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edittext"
            android:layout_below="@+id/newPasswordEditText"
            />

        <Button
            android:id="@+id/resetPasswordButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/light_purple"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="Update password"
            android:layout_below="@id/confirmPasswordEditText" />
    </RelativeLayout>

</RelativeLayout>
