<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/register_form"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/light_purple"
    android:background="@drawable/border_radius_top"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nice to have you join"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please register with your information"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"/>


        <EditText
            android:id="@+id/register_edtemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:drawableLeft="@drawable/ic_emaill"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edittext"
            />

        <EditText
            android:id="@+id/register_edtpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_security"
            android:drawablePadding="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_edittext"
            />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:textStyle="bold"
            android:text="Register"/>
    </LinearLayout>

</RelativeLayout>