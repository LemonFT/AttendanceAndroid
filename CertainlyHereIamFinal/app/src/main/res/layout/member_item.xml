<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/member_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:orientation="horizontal"
    android:backgroundTint="@color/white_blue"
    android:background="@drawable/border_radius_form_litle"
    android:elevation="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_width="1dp"
        android:src="@drawable/ic_school"
        android:layout_gravity="center"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Nguyễn Vũ Quốc Lâm"/>
        <TextView
            android:id="@+id/identifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="ID: 3121410292"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="nguyenthiennam.npk@gmail.com"
            android:textStyle="normal"
            android:textSize="11dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/icon_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete"
        android:layout_gravity="center"/>

</LinearLayout>